#!/usr/bin/perl

sub out {
	@s = sort { $a <=> $b } keys(%where);
	return if $#s < 0;

	$here = "nothing";

	for ($i = 0; $i <= $#s; $i++) {
		($lat1, $lon1, $lat2, $lon2) = split(/[:,]/, $where{$s[$i]});

		if ($here ne "$lon1,$lat1") {
			if ($here eq "nothing") {
				print '{ "type": "Feature", "properties": { ';
				print "\"name\": \"$oname\", \"way\": $oway";
				print ' }, "geometry": { "type": "LineString", "coordinates": [';
			} else {
				print "] } }\n";
				print '{ "type": "Feature", "properties": { ';
				print "\"name\": \"$oname\", \"way\": $oway";
				print ' }, "geometry": { "type": "LineString", "coordinates": [';
			}

			print "[ $lon1, $lat1 ], [ $lon2, $lat2 ]";
		} else {
			print ", [ $lon2, $lat2 ]";
		}

		$here = "$lon2,$lat2";
	}

	if ($here ne "nothing") {
		print "] } }\n";
	}
}


while (<>) {
	chomp;

	($where, $kind, $slash, $way, $seg, $name) = split(/ /, $_, 6);

	$name =~ s/"//g;
	$name =~ s/_/ /g;
	$name =~ s/\\/\\\\/g;

	if ($way ne $oway) {
		out();

		%where = ();
	}

	$oname = $name;
	$oway = $way;

	while ($where{$seg} ne "") {
		# print "change from $seg ";
		$seg = $seg . "x" . rand(100);
		# print "to $seg\n";
	}

	$where{$seg} = $where;
}

out();

